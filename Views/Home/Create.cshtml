@model GameStoreASP_Net.Models.User
@{
    ViewBag.Title = "Добавление пользователя";
}
<form asp-action="create" asp-controller="home">
    <div class="form-group">
        <label asp-for="LoginUser" class="control-label">Имя</label>
        <input type="text" asp-for="LoginUser" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PasswordUser" class="control-label">Пароль</label>
        <input type="password" asp-for="PasswordUser" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>
